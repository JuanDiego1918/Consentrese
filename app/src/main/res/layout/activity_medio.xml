<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedioActivity">

    <TextView
        android:id="@+id/jugador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER 1           "
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/movimientos1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Movimientos 1"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/puntaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jugador1"
        android:text="Puntaje 340"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="35dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:columnCount="4">

        <ImageButton
            android:id="@+id/btn1m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn2m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn3m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn4m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn5m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn6m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn7m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn8m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn9m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn10m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn11m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />

        <ImageButton
            android:id="@+id/btn12m"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="2dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/pregunta" />
    </GridLayout>


    <TextView
        android:id="@+id/jugador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="PLAYER 2"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/movimientos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Movimientos 1"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/puntaje2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/jugador2"
        android:layout_alignParentStart="true"
        android:text="Puntaje 340"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="35dp" />
</RelativeLayout>