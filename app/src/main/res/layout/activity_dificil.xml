<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DificilActivity">

    <LinearLayout
        android:layout_width="4dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/puntaje"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"></LinearLayout>
    <TextView
        android:id="@+id/jugador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000"
        android:text="Player 1"/>

    <TextView
        android:id="@+id/jugador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Player 2"
        android:textColor="#000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/movimientos1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jugador1"
        android:text="Movimientos 1"
        android:textColor="#000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/movimientos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/jugador1"
        android:text="Movimientos 2"
        android:textColor="#000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/puntaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movimientos1"
        android:text="Puntaje 1"
        android:textColor="#000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/puntaje2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/movimientos1"
        android:text="Puntaje 2"
        android:textColor="#000"
        android:textSize="30sp" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
