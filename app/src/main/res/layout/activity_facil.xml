<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacilActivity">

    <Chronometer
        android:id="@+id/crono"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/puntaje" />

    <TextView
        android:id="@+id/jugador1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jugador 1"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/intentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jugador1"
        android:text="Movimientos: 1"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/puntaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/intentos"
        android:text="Puntaje: 200"
        android:textColor="#000"
        android:textSize="20sp" />

    <TableLayout
        android:id="@+id/asbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TableRow>

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="85dp"
                android:layout_height="95dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/pregunta" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/pregunta" />

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/pregunta" />

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/pregunta" />
        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/pregunta" />

            <ImageButton
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/pregunta" />

            <ImageButton
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/pregunta" />

            <ImageButton
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/pregunta" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/jugador2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Jugador 1"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/intentos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/jugador2"
        android:layout_alignParentStart="true"
        android:text="Movimientos: 1"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/puntaje2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/intentos2"
        android:layout_alignParentStart="true"
        android:text="Puntaje: 200"
        android:textColor="#000"
        android:textSize="20sp" />

</RelativeLayout>