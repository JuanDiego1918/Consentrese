<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalFragment">

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/txtNombre2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtNombre"
        android:text="Bienvenido"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtNombre2"
        android:elevation="10dp"
        android:src="@drawable/icono" />

    <LinearLayout
        android:id="@+id/btnContenedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnInciar"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Iniciar" />

        <Button
            android:id="@+id/btnPuentaje"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Puntajes" />

        <Button
            android:id="@+id/btnAjusted"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Ajustes" />
    </LinearLayout>



</RelativeLayout>